{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "esnext",
        "module": "CommonJS",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        // For lit `query` decorator to work
        "useDefineForClassFields": false,
        // Without, fields like `.interactive` on Sprite (Phaser) are not visible.
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/*",
        "demos/*",
    ],
}