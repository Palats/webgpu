{
    "compilerOptions": {
        "outDir": "./dist/tsout",
        "target": "es2019",
        "module": "esnext",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "strict": true,
        "experimentalDecorators": true,
        // For lit `query` decorator to work
        "useDefineForClassFields": false,
    },
    "include": [
        "src/*",
        "demos/*",
    ],
}